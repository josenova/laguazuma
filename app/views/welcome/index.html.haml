- meta description: "El Paraíso is a rustic getaway situated atop cliffs overlooking Samana Bay. Constructed as an ecolodge bungalow, it's a one-of-a-kind way to experience the Dominican Republic and its natural beauty.", keywords: %w(ecolodge bungalow samana las galeras guazuma dominican republic villa paraiso rent room airbnb travel vacations republica dominicana paradise las terrenas house)

#hero
  #overlay
    %h1 Villa Paraíso® Official Page | Bungalow rooms for rent in Las Galeras
    = video_tag ["1.mp4","1.ogv"], :controls => false, :autoplay => "autoplay", :loop => "loop", :preload => 'auto'
    #headline Welcome to Paradise <span>Bungalow rooms for rent in Las Galeras, Dominican Republic</span>

    -#= link_to 'https://www.facebook.com/pg/CasaElParaisoRD/reviews/', id: 'facebook', target: "_blank" do
      %h6 Facebook Rating
      = image_tag "icons/fb_stars.png", class: 'rating'
      .total 30 Reviews
      .review &ldquo;Spectacular place, surpassed only by the attentions of the hosts.&rdquo;

= link_to 'https://www.airbnb.com/users/show/60995700', id: 'airbnb', target: "_blank" do
  %h6 Airbnb Rating
  .score 5.0
  = image_tag "icons/airbnb_stars.png", class: 'rating'
  .total 90+ Reviews
  .review &ldquo;Pictures do no justice to this beautiful paradise. The views are spectacular...&rdquo;

#content

  #description.wrapper

    .item
      .item-image.left
        = link_to image_tag("rooms/room-1.png", alt: 'Ocean-view bungalow rooms with no front walls.'), asset_path("rooms/room-1.png")
      .item-description
        %h3.item-title A one-of-a-kind experience
        .item-text "El Paraíso" is a rustic getaway situated atop cliffs overlooking Samana Bay. Constructed from natural and local materials, it's truly a one-of-a-kind way to experience the Dominican Republic and its natural beauty.

    .item
      .item-image.right
        = link_to image_tag("pool.png", alt: 'The pool with ocean-view.'), asset_path("pool.png")
      .item-description
        %h3.item-title Immerse yourself in nature
        .item-text Surrounded by tropical gardens and overall amazing views, its a very special place where you can immerse yourself in nature, find tranquility and connect with your inner self and your beloved ones.



  #expand click images to expand
  #gallery

    = link_to image_tag("living-room-entrance.png", alt: 'Living room entrance.'), asset_path("living-room-entrance.png"), class: 'thumbnail'
    = link_to image_tag("dinner-table.png", alt: 'Dinner table.'), asset_path('dinner-table.png'), class: 'thumbnail'
    = link_to image_tag("pool-pov.png", alt: 'Pool.'), asset_path('pool-pov.png'), class: 'thumbnail'
    = link_to image_tag("poolside-bar.png", alt: 'Poolside bar.'), asset_path('poolside-bar.png'), class: 'thumbnail'
    = link_to image_tag("poolside-area.png", alt: 'Poolside area.'), asset_path('poolside-area.png'), class: 'thumbnail'

  #rooms
    .wrapper
      %h2 Rooms.
      %span Available for rent via Airbnb.
      #big-group
        Big group?
        =link_to 'Rent the Villa', "#villa"

      = form_tag('/search', remote: true, id: 'availability') do

        %em Check Availability:
        = label_tag :checkin, 'Check In'
        = text_field_tag :checkin, '', class: 'datepicker', placeholder: 'dd/mm/yyyy'

        = label_tag :checkout, 'Check Out'
        = text_field_tag :checkout, '', class: 'datepicker', placeholder: 'dd/mm/yyyy'

        = submit_tag 'Search Dates', type: :submit

    - @rooms.each do |r|
      .room
        .wrapper
          .room-number ##{r.number}
          .room-images
            = link_to image_tag("rooms/room-#{r.number}.png", alt: ''), asset_path("rooms/room-#{r.number}.png")
            = link_to image_tag("rooms/room-#{r.number}-view.png", alt: ''), asset_path("rooms/room-#{r.number}-view.png")
            = link_to image_tag("rooms/room-#{r.number}-bathroom.png", alt: ''), asset_path("rooms/room-#{r.number}-bathroom.png")
          %ul.room-info
            %li
              = image_tag('icons/guest.png')
              #{r.capacity} guests
            %li
              = image_tag('icons/bed.png')
              #{r.beds} bed
            %li
              = image_tag('icons/size.png')
              #{r.size}m<sup>2</sup>
            %li
              = image_tag('icons/bathroom.png')
              #{r.bathrooms} bathroom

          .room-desc
            %p
              = r.description
              /%span= image_tag "icons/airbnb_stars"
              = link_to 'Book now through Airbnb', "https://www.airbnb.com/rooms/#{r.airbnb_id}", class: 'book', target: '_blank'

  #villa
    .wrapper
      %h2 Rent the Villa. 
      %span Ideal for big families or groups.

      .room
        .wrapper
          .room-number
          .room-images
            = link_to image_tag("living-room-entrance.png", alt: 'Living room entrance.'), asset_path("living-room-entrance.png"), class: 'thumbnail'
          %ul.room-info
            %li
              = image_tag('icons/guest.png')
              15 guests
            %li
              = image_tag('icons/bed.png')
              9 beds
            %li
              = image_tag('icons/size.png')
              5700m<sup>2</sup>
            %li
              = image_tag('icons/bathroom.png')
              7 bathrooms

          .room-desc
            %p
              All five open-design bungalow rooms and one studio room with air conditioning to accomodate your whole group.
              = link_to 'Book now through Airbnb', "https://www.airbnb.com/rooms/12092507", class: 'book', target: '_blank'
              = link_to 'Book now through HomeAway', "https://www.homeaway.com/vacation-rental/p6568569", class: 'book home-away', target: '_blank'


  #services
    %h2 Additional Services
    %ul.wrapper
      %li Breakfast <span>(included)</span>
      %li Housekeeping <span>(included)</span>
      %li Bar
      %li Dominican Cook
      %li Picnic Baskets
      %li Yoga Session
      %li Reiki Session
      %li Catamaran Excursion
      %li Dinner by Chef Mirko

